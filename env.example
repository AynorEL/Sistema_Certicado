# ========================================
# VARIABLES DE ENTORNO - SISTEMA DE CERTIFICADOS
# ========================================

# ========================================
# CREDENCIALES FTP
# ========================================
FTP_HOST=ftp.iestpsanmarcos.edu.pe
FTP_USER=certificados@iestpsanmarcos.edu.pe
FTP_PASSWORD=TuContraseñaFTP

# ========================================
# BASE DE DATOS
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=certificados
DB_USERNAME=certificados_user
DB_PASSWORD=your_secure_password
MYSQL_ROOT_PASSWORD=your_root_password

# ========================================
# EMAIL (GMAIL SMTP)
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password
MAIL_PORT=587
MAIL_FROM_NAME=Sistema de Certificados

# ========================================
# DOCKER REGISTRY (OPCIONAL)
# ========================================
DOCKER_REGISTRY=your-registry.com
DOCKER_REGISTRY_USER=your_username
DOCKER_REGISTRY_PASSWORD=your_password

# ========================================
# MONITOREO Y NOTIFICACIONES
# ========================================
GRAFANA_PASSWORD=your_grafana_password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SNYK_TOKEN=your_snyk_token

# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================
APP_NAME=Sistema de Certificados
APP_ENV=production
APP_DEBUG=false
APP_URL=https://iestpsanmarcos.edu.pe

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
SESSION_SECURE_COOKIES=true
CSRF_TOKEN_LIFETIME=3600
PASSWORD_MIN_LENGTH=8

# ========================================
# CONFIGURACIÓN DE ARCHIVOS
# ========================================
UPLOAD_MAX_FILESIZE=50M
POST_MAX_SIZE=50M
MAX_EXECUTION_TIME=300
MEMORY_LIMIT=512M

# ========================================
# CONFIGURACIÓN DE LOGS
# ========================================
LOG_LEVEL=error
LOG_CHANNEL=file
LOG_DAYS=30

# ========================================
# CONFIGURACIÓN DE CACHE
# ========================================
CACHE_DRIVER=file
CACHE_TTL=3600

# ========================================
# CONFIGURACIÓN DE BACKUP
# ========================================
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true
BACKUP_PATH=/backup

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30
ALERT_EMAIL=admin@iestpsanmarcos.edu.pe

# ========================================
# CONFIGURACIÓN DE PAYPAL (OPCIONAL)
# ========================================
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ========================================
# CONFIGURACIÓN DE GOOGLE ANALYTICS (OPCIONAL)
# ========================================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# ========================================
# CONFIGURACIÓN DE RECAPTCHA (OPCIONAL)
# ========================================
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ========================================
# CONFIGURACIÓN DE AWS S3 (OPCIONAL)
# ========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_bucket_name

# ========================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DB=0

# ========================================
# CONFIGURACIÓN DE QUEUE (OPCIONAL)
# ========================================
QUEUE_CONNECTION=sync
QUEUE_DRIVER=sync

# ========================================
# CONFIGURACIÓN DE SESSION
# ========================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIES=true

# ========================================
# CONFIGURACIÓN DE TIMEZONE
# ========================================
TIMEZONE=America/Lima
LOCALE=es_PE

# ========================================
# CONFIGURACIÓN DE MAINTENANCE
# ========================================
MAINTENANCE_MODE=false
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# ========================================
# CONFIGURACIÓN DE RATE LIMITING
# ========================================
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_MINUTES=1

# ========================================
# CONFIGURACIÓN DE CORS
# ========================================
CORS_ALLOWED_ORIGINS=https://iestpsanmarcos.edu.pe
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ========================================
# CONFIGURACIÓN DE SECURITY HEADERS
# ========================================
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY="default-src 'self'"

# ========================================
# CONFIGURACIÓN DE BACKUP AUTOMÁTICO
# ========================================
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_SCHEDULE=0 2 * * *
AUTO_BACKUP_RETENTION=7

# ========================================
# CONFIGURACIÓN DE LOGS DE AUDITORÍA
# ========================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION=90

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SLACK_ENABLED=true
NOTIFICATION_TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================
# Descomenta estas líneas para desarrollo local
# APP_ENV=local
# APP_DEBUG=true
# DB_HOST=127.0.0.1
# MAIL_MAILER=log 